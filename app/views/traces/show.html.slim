.container-fluid.trace
  h2= @trace.full_title

  .information
    = @trace.render_information

  .graph
    .span
      div.info= @trace.name
      div
        span.bar
          = ((@trace.stop - @trace.start).to_f * 1_000).round(3)
          ' ms
    - @trace.spans.each do |span|
      .span
        - if span.origin
          div.info= link_to span.name, span.origin.self_path
        - else
          div.info= span.name
        div
          span.bar(style=span.style)
            = ((span.stop - span.start).to_f * 1_000).round(3)
            ' ms
